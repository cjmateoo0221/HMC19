<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/cv_plogsandnotf"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <ImageView
            android:id="@+id/picon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/patienticon"/>

        <TextView
            android:layout_toRightOf="@id/picon"
            android:padding="4dp"
            android:id="@+id/pnotifandlogs_pnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="P-20220042"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pnotifandlogs_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/pnotifandlogs_pnum"
            android:layout_toRightOf="@id/picon"
            android:fontFamily="@font/lato_black"
            android:padding="4dp"
            android:text="Patient Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>