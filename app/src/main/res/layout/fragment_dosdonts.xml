<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.dosdontsfragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_top"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/dosdonts_icon"
                    android:layout_marginStart="40dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/t"
                    android:padding="6dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/lato_black"
                    android:text="Do's and Dont's during Home Quarantine"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_top"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="1. Avoid personal social interaction for 14 days"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="2. Self-monitoring for any influenza-like symptoms for  the entire duration of home quarantine"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="3. Wear medical mask at all times in the presence of everyone."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t3"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="4. Cover mouth and nose when coughing or sneezing. Use tissue or sneeze into your shirt. Throw tissue immediately in the trashcan"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t4"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="5. Wash hands frequently especially after coughing or sneezing"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t5"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="6. Avoid shake hands, kissing, hugging, or laying hands with anyone"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t6"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="7. Refrain from sharing personal items like towels, toothbrush, drinking glasses, cutlery or thermometers"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t7"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="8. Clean all high-touch surfaces such as counters, tabletops, doorknobs, bathroom fixtures, toilet, phones, keyboards and tablets everyday."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/t9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t8"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="9. Ensure adequate ventilation in all areas of the house"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t9"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="10. Isolate self from persons who might be at a greater risk foe acquiring and getting complications from the disease(elderly, young children, persons with weak immune);"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t10"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="11. Minimize travelling and engaging in public activities"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t11"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="12. Take and record temperature daily using this application"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t12"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="13. 24/7 Emergency numbers to call in case of developing any influenza like symptoms"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout    >