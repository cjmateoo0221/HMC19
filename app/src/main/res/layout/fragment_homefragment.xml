            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            android:visibility="visible"
            app:sv_animationType="Line"
            app:sv_doneCircleColor="@color/background_color"
            app:sv_doneCircleRadius="12dp"
            app:sv_doneStepLineColor="@color/background_color"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_nextStepLineColor="@color/background_color"
            app:sv_nextTextColor="@color/background_color"
            app:sv_selectedCircleColor="@color/background_color"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorPrimary"
            app:sv_selectedTextColor="@color/background_color"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="12sp"
            app:sv_stepPadding="4dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_stepsNumber="7"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="57dp" />
    </LinearLayout>


